/* pages/duihuan/duihuan.wxss */
.container {
  width: 100%;
  height: 100vh;
  background-image: url(https://cms-img.oss-cn-hangzhou.aliyuncs.com/wechat/planet/xqggbg.png);
  background-size: 100%;
  padding-top: 40rpx;
}
.title {
  margin-bottom: 17rpx;
}
.zuan-count {
  font-family: PingFangHK-Medium;
  font-size: 30rpx;
  color: #6CE0FF;
  padding-left: 60rpx; 
  margin-bottom: 40rpx;
}
.baoxiang {
  background-image: url(https://cms-img.oss-cn-hangzhou.aliyuncs.com/wechat/planet/jilubg2.png);
  background-size: 100%;
  width: 690rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 52rpx;
  color: #FFFFFF;
  margin: 20rpx auto;
}
.prod-list {
  padding: 30rpx;
  display: flex;
  flex-wrap:wrap;
  justify-content:space-between;
}
.prod-item {
  width: 330rpx;
  height: 558rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 30rpx;
}
.item-image {
  width: 310rpx;
  height: 310rpx;
}
.item-title {
  font-size: 24rpx;
  color: #333333;
  letter-spacing: 2px;
  margin: 10rpx 0;
}
.item-count {
  font-size: 20rpx;
  color: #B5B5B5;
  letter-spacing: 1.25px;
  margin-bottom: 10rpx;
}
.item-zuan {
  padding-left: 40rpx;
  font-size: 24rpx;
  color: #7F00EE;
  letter-spacing: 1.5px;
  background: url(https://cms-img.oss-cn-hangzhou.aliyuncs.com/wechat/planet/zuan2.png) no-repeat;
  background-size: 30rpx;
  margin-bottom: 25rpx;
  background-position:left center;
}
.dh-btn {
  background-image: linear-gradient(-45deg, #D33BFF 0%, #3D4FFF 100%);
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  width: 220rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  margin: 0 auto;
}